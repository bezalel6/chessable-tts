{
  "name": "chessable-tts",
  "version": "1.0.0",
  "description": "Chrome extension that reads Chessable move explanations aloud, with proper chess notation pronunciation.",
  "private": true,
  "scripts": {
    "build":   "webpack --config webpack.config.js --mode production",
    "dev":     "webpack --config webpack.config.js --mode development",
    "watch":   "webpack --config webpack.config.js --mode development --watch",
    "typecheck": "tsc --noEmit",
    "clean":   "rimraf dist"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "copy-webpack-plugin": "^12.0.2",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
